# FILE: .env

# --- PROJECT SETTINGS ---
PROJECT_NAME="MentorMatch Gateway"

# --- DATABASE ---
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=mentormatch
DATABASE_URL=postgresql://postgres:password@db:5432/mentormatch

# --- GOOGLE AUTH ---
GOOGLE_CLIENT_ID=your-copied-client-id.apps.googleusercontent.com
SUPER_ADMIN_EMAIL=your.actual.email@gmail.com

# --- CLOUDFLARE TURNSTILE ---
TURNSTILE_SECRET_KEY=0x4AAAAAAAC...

# --- SECURITY ---
# From Step 3 (The random string you just generated)
JWT_SECRET_KEY=your-generated-openssl-string-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# --- CORS ---
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- CHATVAT ENGINE ---
CHATVAT_HOST=172.17.0.1
CHATVAT_PORT=8000